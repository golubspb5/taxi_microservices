name: Deploy to Staging

on:
  push:
    branches:
      - develop

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup SSH
        uses: webfactory/ssh-agent@v0.7.0
        with:
          ssh-private-key: ${{ secrets.STAGING_SSH_PRIVATE_KEY }}

      - name: Deploy to Staging Server
        run: |
          ssh -o StrictHostKeyChecking=no ${{ secrets.STAGING_USER }}@${{ secrets.STAGING_HOST }} << 'EOF'

            if [ -d "/root/taxi_project/Taxi-service" ]; then
              echo "Project directory exists. Pulling latest changes..."
              cd /root/taxi_project/Taxi-service
              git reset --hard
              git pull origin develop
            else
              echo "Project directory not found. Cloning repository..."
              git clone https://github.com/1337Tema/Taxi-service.git /root/taxi_project
              cd /root/taxi_project
              git checkout develop
            fi

            # Записываем переменные окружения из секрета GitHub
            echo "${{ secrets.ENV_FILE_STAGING }}" > .env.staging

            # Явно указываем файл для staging и задаем уникальное имя проекта
            COMPOSE_PROJECT_NAME=taxi_staging docker compose -f docker-compose.staging.yml up -d --build

            # Очищаем старые, неиспользуемые образы Docker
            docker image prune -f
          EOF